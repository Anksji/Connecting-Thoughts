<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tranparent_color">

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:id="@+id/fragment_margin"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.8"
        android:layout_marginLeft="60dp"/>


    <!--<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:duplicateParentState="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/fragment_layout">
        </RelativeLayout>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:duplicateParentState="true"
        android:id="@+id/fragment_layout"
        android:layout_marginLeft="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/add_to_your_library"
                android:layout_marginLeft="10dp"
                android:padding="10dp">
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/ic_round_add_button"
           android:id="@+id/add_to_library_icon"
           android:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ADD_TO_LIBRARY"
                android:id="@+id/add_to_library_text"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"/>
            </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:tint="@color/white"
            android:id="@+id/fragment_go_back"
            android:layout_alignParentRight="true"
            android:scaleX="-1"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_go_back_left_arrow"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/black" />
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:id="@+id/story_chapter_list"/>


    </LinearLayout>



   <!-- </RelativeLayout>-->

</RelativeLayout>
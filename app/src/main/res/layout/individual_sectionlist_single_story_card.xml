<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="?android:selectableItemBackground"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:id="@+id/cover_image"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:transitionName="cover_image_transition"
            android:scaleType="centerCrop"
            android:src="@drawable/card_defalt_back_cover" />


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_more"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:visibility="gone"
                android:id="@+id/card_more_option"
                android:tint="@color/grey_600"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:id="@+id/no_of_reports_layout"
                android:background="@drawable/warning_circle_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="1"
                    android:id="@+id/no_of_reports"
                    android:textColor="@color/white"
                    android:textSize="12dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/story_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_toLeftOf="@+id/card_more_option"
                android:layout_margin="5dp"
                android:text="Story Title"
                android:textColor="@color/grey_800"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/story_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/story_title"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:transitionName="story_info_transition"
                android:maxLines="5"
                android:text="4fejkwjf wwefwfweif fwef wwejfwfsdfjsf  fasfjaskfjksfjaskfjfdjaksfjslafjsadfjsajf fsafsa ff af dfksajfsakfjf f fasfsfjfjfsafsd ff saf sfd sf afjsakfsfsf fdsajfskfj sf sfsd fjsf ksfjskdfjsadfjsf sfsf sdfsf f f sfs fdf asf asf sd wf wefi wf wf wf f f wfkfjfjjsdfjsafkdjfsjfjfaf sfsjfasfsf sf af wf ewfjwfw fwf wfjwoefj wf wf fffoifjfjoi fw wf iwf iwf if f wifjwfjw
fhw wi wfwff f wfi wfw fwf wf wfiwe fwf fqf f f"
                android:textColor="@color/grey_600"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/view_layout">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_eye"
                        android:transitionName="eye_transition"
                        android:tint="@color/grey_500" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey_500"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:textSize="14dp"
                        android:text="3 k"
                        android:id="@+id/view_count"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_rate_star_button"
                        android:tint="@color/grey_500" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey_500"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textSize="14dp"
                        android:text="243 k"
                        android:id="@+id/star_count"/>
                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>
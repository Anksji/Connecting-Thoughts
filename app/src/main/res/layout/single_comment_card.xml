<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_user_"
            android:id="@+id/current_user_image"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/comment_user_name_color"
                android:id="@+id/user_name"
                android:layout_marginLeft="2dp"
                android:text="User Name"
                android:textSize="16dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/user_comment_date"
                android:id="@+id/rated_star_layout"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:tint="@color/grey_700"
                    android:id="@+id/first_star"
                    android:layout_margin="2dp"
                    android:src="@drawable/ic_rate_star_button"/>
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:tint="@color/grey_700"
                    android:visibility="gone"
                    android:id="@+id/second_star"
                    android:layout_margin="2dp"
                    android:src="@drawable/ic_rate_star_button"/>
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:tint="@color/grey_700"
                    android:visibility="gone"
                    android:id="@+id/third_star"
                    android:layout_margin="2dp"
                    android:src="@drawable/ic_rate_star_button"/>
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:tint="@color/grey_700"
                    android:visibility="gone"
                    android:id="@+id/fourth_star"
                    android:layout_margin="2dp"
                    android:src="@drawable/ic_rate_star_button"/>
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:tint="@color/grey_700"
                    android:visibility="gone"
                    android:id="@+id/fifth_star"
                    android:layout_margin="2dp"
                    android:src="@drawable/ic_rate_star_button"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_500"
                android:layout_marginLeft="2dp"
                android:textSize="12dp"
                android:text="23/2/2018"
                android:id="@+id/comment_date"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/comment_user_name_color"
                android:id="@+id/user_comment"
                android:layout_marginLeft="2dp"
                android:textSize="16dp"
                android:text="This is complete comment by user put by him.....
This is complete comment by user put by him....."/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
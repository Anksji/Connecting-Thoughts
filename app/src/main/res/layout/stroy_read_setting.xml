<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_retangle_grey_100"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_marginBottom="50dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">


    <LinearLayout
        android:id="@+id/edit_draft_story"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/day_vision"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_border">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_sun"
                android:tint="@color/grey_700" />

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:background="@drawable/white_rectangle"></RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/night_vision"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_border">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_night"
                android:tint="@color/grey_700" />

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:background="@drawable/dark_rectangle"></RelativeLayout>
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/edit_published_story"
        android:orientation="horizontal"
        android:layout_weight="2">
        <RelativeLayout
            android:layout_width="0dp"
            android:id="@+id/increase_font"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_border"
            android:layout_marginRight="20dp"

            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/ic_text_size_plus_sign_in_circular_button"
                android:tint="@color/grey_700"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/ic_read_plus_button"
                android:layout_alignParentRight="true"
                android:tint="@color/grey_700"/>


        </RelativeLayout>



        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_border"
            android:id="@+id/decrease_font"
            android:layout_marginLeft="20dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/ic_text_size_reduce"
                android:tint="@color/grey_700"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_read_minus"
                android:layout_margin="5dp"
                android:layout_alignParentRight="true"
                android:tint="@color/grey_700"/>



        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:id="@+id/save_setting"
        android:background="@drawable/rectangle_border"
        android:layout_weight="1">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerInParent="true"
           android:textSize="16dp"
           android:textColor="@color/grey_700"
           android:text="@string/SAVE"/>

    </RelativeLayout>




<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/navigation_header"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/hb_profile_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:id="@+id/first_relative_layout"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <ImageView
                android:id="@+id/navigation_header_background"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:alpha="0.3"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:src="@drawable/card_defalt_back_cover" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.5"
                android:src="@drawable/image_back_ground_gradient"
                />
            </RelativeLayout>

            <ImageView
                android:id="@+id/hb_banner_gradient_layer"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_user_" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_image"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical|center_horizontal">

                <LinearLayout
                    android:id="@+id/hb_user_details_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/grey_800"
                        android:layout_marginTop="8dp"
                        android:text="User Name"
                        android:textSize="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="false"
                    android:layout_alignParentRight="true"
                    android:gravity="center_horizontal|right"
                    android:orientation="horizontal">

                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>

    <View
        android:id="@+id/peripherals_separator"
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:layout_marginBottom="4dp"
        android:background="@color/grey_400"
        />
</LinearLayout>